<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FF9800"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="297dp"
        android:layout_height="39dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="350dp"
        android:background="#BBFFD04F"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/enterAmount"
        android:layout_width="359dp"
        android:layout_height="46dp"
        android:layout_marginTop="80dp"
        android:background="#AA4FDFFF"
        android:ems="10"
        android:hint="  Enter Amount"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Tip:"
        app:layout_constraintBottom_toTopOf="@+id/totalLabel"
        app:layout_constraintEnd_toStartOf="@+id/tipAmount"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="360dp"
        android:text="Total:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/totalAmount"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/tipSeekBar"
        android:layout_width="303dp"
        android:layout_height="33dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@+id/tipAmount"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="0%"
        app:layout_constraintBottom_toTopOf="@+id/tipLabel"
        app:layout_constraintEnd_toStartOf="@+id/tipSeekBar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tipAmount"
        android:layout_width="297dp"
        android:layout_height="39dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:background="#BBFFD04F"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/totalAmount"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>